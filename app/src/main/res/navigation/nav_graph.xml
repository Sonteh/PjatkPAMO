<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startingFragment">
    <fragment
        android:id="@+id/startingFragment"
        android:name="com.example.pjatkpamo.StartingFragment"
        android:label="fragment_starting"
        tools:layout="@layout/fragment_starting" >
        <action
            android:id="@+id/action_startingFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_startingFragment_to_covidGraphFragment"
            app:destination="@id/covidGraphFragment" />
        <action
            android:id="@+id/action_startingFragment_to_covid_Quiz_Fragment"
            app:destination="@id/covid_Quiz_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.pjatkpamo.CalculatorFragment"
        android:label="fragment_calculator"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculatorFragment_to_recipeFragment"
            app:destination="@id/recipeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.pjatkpamo.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" />
    <fragment
        android:id="@+id/covidGraphFragment"
        android:name="com.example.pjatkpamo.CovidGraphFragment"
        android:label="fragment_covid_graph"
        tools:layout="@layout/fragment_covid_graph" />
    <fragment
        android:id="@+id/covid_Quiz_Fragment"
        android:name="com.example.pjatkpamo.CovidQuizFragment"
        android:label="fragment_covid__quiz_"
        tools:layout="@layout/fragment_covid_quiz" />
</navigation>